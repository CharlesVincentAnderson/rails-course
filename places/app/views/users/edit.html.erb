<%= form_for @user do |f| %>
    <div>
        <%= f.text_field :first_name, placeholder: 'First Name' %>
    </div>
    <div>
        <%= f.text_field :last_name, placeholder: 'Last Name' %>
    </div>
    <div>
        <%= f.text_area :email, placeholder: 'Email' %>
    </div>
    <div>
        <%= f.text_area :picture, placeholder: 'Picture' %>
    </div>
    <div>
        <%= f.submit 'Save' %>
    </div>
<% end %>